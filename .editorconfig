root=true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{json,lock}]
indent_size = 2
insert_final_newline = false

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{md,markdown,txt}]
index_style = tab
trim_trailing_whitespace = false
